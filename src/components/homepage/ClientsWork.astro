---
import Logo1 from '../../img/ClientLogos/1.webp';
import Logo2 from '../../img/ClientLogos/2.webp';
import Logo3 from '../../img/ClientLogos/3.webp';
import Logo4 from '../../img/ClientLogos/4.webp';
import Logo5 from '../../img/ClientLogos/5.webp';
import Logo6 from '../../img/ClientLogos/6.webp';
import Logo7 from '../../img/ClientLogos/7.webp';
import Logo8 from '../../img/ClientLogos/8.webp';
import Logo9 from '../../img/ClientLogos/9.webp';
import Logo10 from '../../img/ClientLogos/10.webp';
import Logo11 from '../../img/ClientLogos/11.webp';
import Logo12 from '../../img/ClientLogos/12.webp';
import Logo13 from '../../img/ClientLogos/13.webp';
import Logo14 from '../../img/ClientLogos/14.webp';
import Logo15 from '../../img/ClientLogos/15.webp';
import Logo16 from '../../img/ClientLogos/16.webp';
import Logo17 from '../../img/ClientLogos/17.webp';
import Logo18 from '../../img/ClientLogos/18.webp';

const clientLogosData = [
  {
    imgURL: Logo1,
  },
  {
    imgURL: Logo2,
  },
  {
    imgURL: Logo3,
  },
  {
    imgURL: Logo4,
  },
  {
    imgURL: Logo5,
  },
  {
    imgURL: Logo6,
  },
  {
    imgURL: Logo7,
  },
  {
    imgURL: Logo8,
  },
  {
    imgURL: Logo9,
  },
  {
    imgURL: Logo10,
  },
  {
    imgURL: Logo11,
  },
  {
    imgURL: Logo12,
  },
  {
    imgURL: Logo13,
  },
  {
    imgURL: Logo14,
  },
  {
    imgURL: Logo15,
  },
  {
    imgURL: Logo16,
  },
  {
    imgURL: Logo17,
  },
  {
    imgURL: Logo18,
  },
];
---

<section>
  <div class='container clients-served'>
    <h2 class='section-title clients-served-title slide-in'>Clients served</h2>

    {
      clientLogosData.map((client, i) => (
        <div class={`client-logo ${`client-logo-${i + 1}`} slide-in`}>
          <img src={client.imgURL} alt='' />
        </div>
      ))
    }
  </div>
</section>

<style>
  .clients-served {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    row-gap: 2rem;

    align-content: center;
  }

  .clients-served-title {
    grid-column: 1/-1;
  }

  .client-logo {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .client-logo > img {
    width: 90%;
    height: 70px;
    object-fit: contain;
    max-width: 80px;

    transition: transform 0.15s ease-in-out, filter 0.15s ease-in-out;
  }

  .client-logo > img:hover {
    transform: translateY(-5px);
    filter: brightness(150%);
  }

  @media (max-width: 1170px) {
    .clients-served {
      max-width: 600px;
      margin: 0 auto;
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 640px) {
    .clients-served {
      row-gap: 3rem;
    }

    .client-logo > img {
      height: 40px;
    }
  }

  @media (max-width: 530px) {
    .clients-served {
      grid-template-columns: repeat(2, 1fr);
      row-gap: 3rem;
    }

    .client-logo > img {
      height: 50px;
    }
  }

  @media (max-width: 390px) {
    .client-logo > img {
      height: 30px;
    }
  }
</style>
