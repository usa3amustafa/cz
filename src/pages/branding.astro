---

<Layout title="C'Z Arvelo | Branding">
  <Header
    headerTitle={brandingData.headerTitle}
    headerDesc={brandingData.headerDesc}
    headerDescMob1={brandingData.headerDesc.slice(0, 50)}
    headerDescMob2={brandingData.headerDesc.slice(50, -1)}
    bgImgDesktop={`url(${brandingData.bgImgDesktop})`}
    bgImgMob={`url(${brandingData.bgImgMob})`}
  />
  <Projects
    projectImgsDesktop={brandingData.projectsImgsDesktop}
    projectsMobData={brandingData.projectsMobData}
  />
</Layout>
