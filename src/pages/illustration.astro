    },
    {
      preHover: SPSPH,
      hover: SPSH,
    },
    {
      preHover: SubiceezPH,
      hover: SubiceezH,
    },
  ],
  projectsMobData: [
    {
      title: 'transformers',
      img: TransformersMob,
      href: '/transformers',
      desc: 'apparel / consumer products',
    },
    {
      title: 'verzuz',
      img: VerzuzMob,
      href: '/verzuz',
      desc: 'apparel design / branding',
    },
    {
      title: 'triller',
      img: TrillerMob,
      href: '/triller',
