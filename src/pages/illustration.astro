  headerTitle: 'branding',
  headerDesc:
    "Over the last 10 years I've helped countless individuals and companies of all sizes match their brand aesthetic to their message and purpose.In today's day and age,you can't get by with a good product alone.",
  bgImgDesktop: bgImgDesktop,
  bgImgMob: bgImgMob,
  projectsImgsDesktop: [
    {
      preHover: TransformersPH,
      hover: TransformersH,
    },
    {
      preHover: VerzuzPH,
      hover: VerzuzH,
    },
    {
      preHover: CyphrPH,
      hover: CyphrH,
    },
    {
      preHover: TrillerPH,
      hover: TrillerH,
    },
    {
      preHover: TheoryPH,
      hover: TheoryH,
    },
    {
      preHover: FightClubPH,
