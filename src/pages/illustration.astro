---

<Layout title="C'Z Arvelo | ILLUSTRATION">
  <Header
    headerTitle={apparelData.headerTitle}
    headerDesc={apparelData.headerDesc}
    headerDescMob1={apparelData.headerDesc.slice(0, 50)}
    headerDescMob2={apparelData.headerDesc.slice(50, -1)}
    bgImgDesktop={`url(${apparelData.bgImgDesktop})`}
    bgImgMob={`url(${apparelData.bgImgMob})`}
  />
  <Projects
    projectImgsDesktop={apparelData.projectsImgsDesktop}
    projectsMobData={apparelData.projectsMobData}
  />
</Layout>
